<% provide(:title, 'Create Student') %>

<h1>Create Student</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @student do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :s_id, 'Student ID #' %>
      <%= f.text_field :s_id %>
      
      <%= f.label :grade %>
      <%= f.text_field :grade %>
      
      <%= f.label :birthdate, 'Birthdate (mm/dd/yyyy, slashes required)' %>
      <%= f.text_field :birthdate %>

      <%= f.submit "Create Student", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>