<% provide(:title, @student.name) %>
<div class="row">
  <aside class="span2">
    <section>
      <h1>
        <%= @student.name %> | <%= @student.grade %>
      </h1>
    </section>
  </aside>
  <div class="span10">
    <% if @votes %>
      <%= render 'vote_record' %>
    <% else %>
      <%= @categories %>
      <%= render 'vote_form' %>
    <% end %>
  </div>
</div>